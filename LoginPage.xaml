<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GorselProgramlamaOdev21010310066.LoginPage"
             Title="LoginPage">
   <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center" Spacing="10">
    <Frame CornerRadius="20">
        <StackLayout>
            <Label Text="Login" FontSize="Large"/>
            <Entry x:Name="txtEmail" Placeholder="Email" Keyboard="Email"/>
            <Entry x:Name="txtPassword" Placeholder="Password" IsPassword="True"/>
            <Button Text="Oturum Aç" Clicked="LoginClicked"/>
            <Button Text="Hesabım Yok" BackgroundColor="Transparent" TextColor="Blue" FontSize="Medium" Clicked="GoToRegisterPage"/>
        </StackLayout>
    </Frame>
    </VerticalStackLayout>
</ContentPage>