        <Frame CornerRadius="20">
            <StackLayout>
                <Label Text="Kaydol" FontSize="Large"/>
                <Entry x:Name="txtName" Placeholder="Kullan覺c覺 Ad覺" Keyboard="Default"/>
                <Entry x:Name="txtEmail" Placeholder="Email" Keyboard="Email"/>
                <Entry x:Name="txtPassword" Placeholder="Password" IsPassword="True"/>
                <Button Text="Kaydol" Clicked="RegisterClicked"/>
                <Button Text="Zaten bir hesab覺m var" BackgroundColor="Transparent" TextColor="Blue" FontSize="Medium" Clicked="GoToLoginPage"/>
            </StackLayout>
        </Frame>
