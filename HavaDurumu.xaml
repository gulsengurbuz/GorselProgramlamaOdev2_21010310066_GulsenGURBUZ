<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GorselProgramlamaOdev21010310066.HavaDurumu"
             Title="HavaDurumu">

    <ScrollView>

        <StackLayout Padding="30" VerticalOptions="Center">
            
            <Entry x:Name="CityEntry" Placeholder="Åžehir ismi girin" IsVisible="False" />
            
            <Button x:Name="GetWeatherButton" Text="Hava Durumunu Getir" Clicked="OnGetWeatherButtonClicked" IsVisible="False" />
            
            <Image Source="ekklee.png" VerticalOptions="End" Margin="0,20,0,0" HeightRequest="24" WidthRequest="24">
                <Image.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnImageTapped" />
                </Image.GestureRecognizers>
            </Image>
            
            <StackLayout x:Name="WeatherStackLayout" Padding="20" VerticalOptions="StartAndExpand">
               
            </StackLayout>
        </StackLayout>
        </ScrollView>
</ContentPage>